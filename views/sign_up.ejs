<%- include ("header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page Header above search bar</title>
</head>
<body>
    <div class="sign_up_container">
    
    <div class="spacer">
    <h1> Sign Up </h1>
    </div>
    <br></div>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,600' rel='stylesheet' type='text/css'>
    
        <div class="container">
            <div class="sign_up_container_content">
               <img src="https://res.cloudinary.com/debbsefe/image/upload/f_auto,c_fill,dpr_auto,e_grayscale/image_fz7n7w.webp" alt="header-image" class="cld-responsive">
                    <form>
                       <input type="text" placeholder="Username">
                       <input type="password" placeholder="Password">
                        <p></p>
                       <div class="beside">
                        <input type="date" placeholder="Date Of Birth">
                        <select>
                            <option>Gender</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Non-Binary</option>
                            <option>Other</option>
                            <option>Prefer Not To Answer</option>
                        </select>
                    </div>
                        <input type="email" placeholder="Email Address">
                        <select>
                            <option>Nationality</option>
                            <option>Ireland</option>
                            <option>United Kingdom</option>
                            <option>United States</option>
                            <option>Other</option>
                        </select>
                        <p><input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label 
                        class="form-check-label" for="invalidCheck"> Agree to terms and conditions
                        </label></p>
                        <button type="button">Submit</button>
                    </form>
    
    </div>
    
    <br>
    Already a member? <u style="color:#218B82;"><a href="/views/login.ejs">Login Here!</a></u>
    </br>
</div>
      
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>
   
    </div>
 </div>
</body>
 
  <%- include ("footer") %>
</html>